
<% if @temp_title && @temp_description %>
  <h1>
    <%= @temp_title %> 
  </h1>
  <% if @temp_image %>
    <div>
      <img src=<%= "https://#{@temp_image}" %> style="border: solid;" ></img>
    </div>
  <% end %>
  <br>
  <% if @temp_image %>
    <p>
      <%= @temp_description %>
    </p>
  <% end %>

  <%= form_for @thing do |f| %>
  <%= f.hidden_field :temp_title, :value => @temp_title %>
  <%= f.hidden_field :temp_description, :value => @temp_description %>
  <%= f.hidden_field :temp_image, :value => @temp_image %>
  <%= f.submit "Thats right!", class: "btn btn-warning"%>
  <%= link_to 'Thats not right.', @thing, confirm: 'Are you sure?', method: :delete, class: "btn btn-warning", style: "margin-left:10px;" %>


  <% end %>
<% else %>

<h1>Please give a description for the <%= @thing.type.name %>: <%= @thing.name %></h1>

<%= render 'form' %>

<% end %>
