<%= form_for(@type) do |f| %>
  <% if @type.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@type.errors.count, "error") %> prohibited this type from being saved:</h2>

      <ul>
      <% @type.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="padding-top:20px;">
    <%= f.text_area :description %>
  </div>

  <div class="actions" >
    <%= f.submit "Yup, that's a '#{@type.name}'.", class: "btn btn-warning" %>
    <% unless @type.active == true %>
      <%= link_to 'Nevermind', @type, confirm: 'Are you sure?', method: :delete, class: "btn btn-warning", style: "margin-left:10px;"%>
    <% end %>
  </div>
<% end %>
